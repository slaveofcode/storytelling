#rsvp.section.section-contact.bg-cover.with-dark-bg(style='background-color: #222222;')
  .container
    .title-section-wrapper
      h2.title-section YOUR WISHES
    form#contactForm.form.row.rsvp(action="/rsvp", method="post")
      .col-sm-6.form-group
        label Name     
        input#name.form-control.required(name='name', required='', type='text')
      .col-sm-6.form-group
        label Email    
        input#email.form-control.required(name='email', required='', type='email')
      .col-sm-12.form-group
        label Message
        textarea#message.form-control.required(name='message', required='')
      .col-sm-12.form-group
        button.primary-btn.with-bg(type='submit') SEND