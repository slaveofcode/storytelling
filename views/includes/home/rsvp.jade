    form#contactForm.form.row.rsvp
      // Form Group
      .col-sm-6.form-group
        label Name
        |                         
        input#name.form-control.required(name='name', required='', type='text')
        // Form Group
      // Form Group
      // Form Group
      .col-sm-6.form-group
        label Email
        |                         
        input#email.form-control.required(name='email', required='', type='email')
      // Form Group
      // Form Group
      .col-sm-6.form-group
        label Which events are you attending?
        |                         
        input#events.form-control.required(name='events', required='', type='text')
      // Form Group
      // Form Group
      .col-sm-6.form-group
        label How many guests are you bringing?
        |                         
        input#guests.form-control.required(name='guests', required='', type='text')
      // Form Group
      // Form Group
      .col-sm-12.form-group
        label Additional Information
        |                         
        textarea#message.form-control.required(name='message', required='')
